<section id="itemContainer">
    <div class="row text-center">
        <div class="col-xl-4 col-lg-12 mx-auto my-4 px-2">
            <div id="backBtn" class="btn btn-outline-dark mb-5 text-start px-xl-4 px-sm-5 py-xl-2 py-sm-3">
                <i class="fas fa-angle-double-left"></i> Go Back
            </div>
            <h2 id="brandHeader"></h2>
            <img
            src=""
            alt=""
            id="imgProfile"
            class="card-img mt-3 mb-5"
            />
            <div class="lead">
                Current Cart Quantity: <span id="cartQtyDisp">0</span>
            </div>
            <div id="cartBtn" class="btn btn-primary my-3 px-xl-4 px-sm-5 py-xl-2 py-sm-3">
                <i class="fas fa-cart-plus"></i> Add to Cart
            </div>
            <div id="cartGroup" class="input-group my-3" hidden>
                <div class="input-group-prepend">
                  <span class="input-group-text">Qty: </span>
                </div>
                <input type="number" class="form-control" id="cartQty" min="0" value="0" step="1">
                <div class="input-group-append">
                    <div id="cartConfirmBtn" class="btn btn-primary mx-1">
                        <i class="fas fa-check"></i> Add
                    </div>
                </div>
                <div class="input-group-append">
                    <div id="cartCancelBtn" class="btn btn-danger">
                        <i class="fas fa-times"></i> Back
                    </div>
                </div>
            </div>
            <div id="errorTicker" hidden>
                Message
            </div>
        </div>
        <div class="col-xl-8 col-lg-12 my-4">

            <div class="phone-wrapper">
                <h4 id="titleProfile"></h4>
                <div class="py-3">
                    <div>
                        <strong>Brand:</strong>
                        <span id="brandProfile"></span>
                    </div>
                    <div>
                        <strong>Stock:</strong> 
                        <span id="stockProfile"></span>
                    </div>
                    <div>
                        <strong>Seller:</strong>
                        <span id="sellerProfile"></span>
                    </div>
                    <div>
                        <strong>Price:</strong>
                        <span id="priceProfile"></span>
                    </div>
                </div>
            </div>
            
            <div class="review-wrapper py-4 px-2">
                <h2 class="mb-4" id="reviewProfile"></h2>
            </div>

            <!-- Show only when logged in  -->
            <form action="" class="py-3 px-5" id="reviewForm" method="POST">
                <div class="form-group my-3">
                    <label class="form-label" for="rating">Rating</label>
                    <select class="form-select" name="rating" id="rating">
                        <option value="1" selected>
                            1 Star
                        </option>
                        <option value="2">
                            2 Stars
                        </option>
                        <option value="3">
                            3 Stars
                        </option>
                        <option value="4">
                            4 Stars
                        </option>
                        <option value="5">
                            5 Stars
                        </option>
                    </select>
                </div>
                <div class="form-group my-3">
                    <label class="text-start" for="review">Comment</label>
                    <textarea class="form-control" name="review" id="review" cols="30" rows="3"></textarea>
                </div>
                
                <button id="addReviewBtn" class="my-3 py-3 btn btn-primary w-50 mx-auto">Add Review</button>
            </form> 
            <div id="formTicker" hidden>
                Message
            </div>
        </div>
    </div>
</section>